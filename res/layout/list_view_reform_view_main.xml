<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:paddingBottom="4dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip" >
  
<TextView
    android:id="@+id/break_rule_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/break_rule_id"
    android:layout_alignRight="@+id/btn_save_sel"
    android:layout_below="@+id/org_name"
    android:text="list_item_sub"
    android:textColor="@color/blue_black_40p_transparent"
    android:textSize="@dimen/text_size_14" />

<TextView
    android:id="@+id/org_name"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/break_rule_content"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/node_name"
    android:text="list_item_title"
    android:textColor="@color/darkcyan"
    android:textSize="@dimen/text_size_14" />

<TextView
    android:id="@+id/break_rule_id"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/btn_save_sel"
    android:layout_toLeftOf="@+id/btn_save_sel"
    android:text="fpr_id"
    android:visibility="invisible" />

<TextView
    android:id="@+id/node_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/break_rule_content"
    android:layout_alignRight="@+id/break_rule_content"
    android:text="node"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textColor="@color/darkcyan" />

<ImageView
    android:id="@+id/btn_save_sel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/org_name"
    android:paddingTop="12dip"
    android:src="@drawable/list_logo"
    android:visibility="visible" />
  
</RelativeLayout>  